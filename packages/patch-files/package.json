{
  "name": "@ermisnetwork/ermis-classroom-patch-files",
  "version": "0.1.5",
  "description": "Patch files including WASM modules, workers, and polyfills with Vite plugin",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./plugin": {
      "import": {
        "types": "./dist/plugin.d.ts",
        "default": "./dist/plugin.js"
      },
      "require": {
        "types": "./dist/plugin.d.cts",
        "default": "./dist/plugin.cjs"
      }
    }
  },
  "files": [
    "dist",
    "files"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "tsup": "^8.0.2",
    "typescript": "^5.8.2",
    "vite": "^6.4.0"
  },
  "peerDependencies": {
    "vite": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ermisnetwork/ermis-classroom-sdk",
    "directory": "packages/patch-files"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  }
}
